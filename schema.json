{
  "$id": "https://raw.githubusercontent.com/graphology/graphology-minivan/master/schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Minivan Graph Bundle",
  "description": "A file describing both a graph's data as well as elementes related to its visual grammar.",
  "version": "0.1.0",
  "type": "object",
  "properties": {
    "title": {
      "title": "Title.",
      "type": "string"
    },
    "authors": {
      "title": "List of authors.",
      "type": "array",
      "items": {
        "title": "Author.",
        "type": "string"
      }
    },
    "description": {
      "title": "Description of the bundled graph.",
      "type": "string"
    },
    "url": {
      "title": "Url for the graph.",
      "type": "string",
      "format": "uri"
    },
    "bundleVersion": {
      "title": "Version of the bundle used.",
      "type": "string"
    },
    "consolidated": {
      "title": "Whether the bundle has been consolidated or not.",
      "type": "boolean"
    },
    "date": {
      "title": "Date.",
      "type": "string",
      "format": "date"
    },
    "graph": {
      "title": "Graph data.",
      "type": "object",
      "properties": {
        "settings": {
          "title": "Graph settings.",
          "type": "object",
          "properties": {
            "type": {
              "title": "Graph type.",
              "type": "string",
              "enum": ["mixed", "directed", "undirected"]
            },
            "multi": {
              "title": "MultiGraph?",
              "type": "boolean"
            }
          }
        },
        "attributes": {
          "title": "Graph-level attributes.",
          "type": "object"
        },
        "nodes": {
          "title": "List of nodes.",
          "type": "array",
          "items": {
            "title": "Node.",
            "type": "object",
            "properties": {
              "key": {
                "title": "Node's key.",
                "type": "string"
              },
              "attributes": {
                "title": "Node's attributes.",
                "type": "object"
              }
            },
            "required": ["key"]
          }
        },
        "edges": {
          "title": "List of edges.",
          "type": "array",
          "items": {
            "title": "Edge.",
            "type": "object",
            "properties": {
              "key": {
                "title": "Edge's key.",
                "type": "string"
              },
              "source": {
                "title": "Edge's source node.",
                "type": "string"
              },
              "target": {
                "title": "Edge's target node.",
                "type": "string"
              },
              "attributes": {
                "title": "Edge's attributes.",
                "type": "object"
              }
            },
            "required": ["source", "target"]
          }
        }
      }
    },
    "model": {
      "title": "Model of the graph.",
      "type": "object",
      "properties": {
        "defaultNodeColor": {
          "title": "Name of the attribute to use for default node color.",
          "type": "string"
        },
        "defaultNodeSize": {
          "title": "Name of the attribute to use for default node size.",
          "type": "string"
        },
        "defaultEdgeColor": {
          "title": "Name of the attribute to use for default edge color.",
          "type": "string"
        },
        "defaultEdgeSize": {
          "title": "Name of the attribute to use for default node color.",
          "type": "string"
        },
        "nodeAttributes": {
          "title": "Metadata about the nodes' attributes in the graph.",
          "type": "object",
          "additionalProperties": {
            "title": "Node attribute.",
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "id": {
                    "title": "Node attribute's id. Must be unique and a slug.",
                    "type": "string"
                  },
                  "name": {
                    "title": "Node attribute's human-readable label.",
                    "type": "string"
                  },
                  "count": {
                    "title": "Number of nodes having this attribute.",
                    "type": "integer"
                  },
                  "type": {
                    "title": "Type of attribute.",
                    "type": "string",
                    "enum": ["ranking-size"]
                  },
                  "integer": {
                    "title": "Whether this number attribute contains integers.",
                    "type": "boolean"
                  },
                  "min": {
                    "title": "Minimum value.",
                    "type": "number"
                  },
                  "max": {
                    "title": "Maximum value.",
                    "type": "number"
                  },
                  "areaScaling": {
                    "title": "Size scale options.",
                    "type": "object",
                    "properties": {
                      "min": {
                        "title": "Scale minimum.",
                        "type": "number"
                      },
                      "max": {
                        "title": "Scale maximum.",
                        "type": "number"
                      },
                      "interpolation": {
                        "title": "Scale interpolation.",
                        "type": "string",
                        "enum": ["linear", "pow-2"]
                      }
                    }
                  }
                }
              },

              {
                "type": "object",
                "properties": {
                  "id": {
                    "title": "Node attribute's id. Must be unique and a slug.",
                    "type": "string"
                  },
                  "name": {
                    "title": "Node attribute's human-readable label.",
                    "type": "string"
                  },
                  "count": {
                    "title": "Number of nodes having this attribute.",
                    "type": "integer"
                  },
                  "type": {
                    "title": "Type of attribute.",
                    "type": "string",
                    "enum": ["ranking-color"]
                  },
                  "integer": {
                    "title": "Whether this number attribute contains integers.",
                    "type": "boolean"
                  },
                  "min": {
                    "title": "Minimum value.",
                    "type": "number"
                  },
                  "max": {
                    "title": "Maximum value.",
                    "type": "number"
                  },
                  "colorScale": {
                    "title": "Color scale.",
                    "type": "string",
                    "enum": ["interpolateCubehelixDefault", "interpolateYlOrBr"]
                  }
                }
              },

              {
                "type": "object",
                "properties": {
                  "id": {
                    "title": "Node attribute's id. Must be unique and a slug.",
                    "type": "string"
                  },
                  "name": {
                    "title": "Node attribute's human-readable label.",
                    "type": "string"
                  },
                  "count": {
                    "title": "Number of nodes having this attribute.",
                    "type": "integer"
                  },
                  "type": {
                    "title": "Type of attribute.",
                    "type": "string",
                    "enum": ["ranking-size", "ranking-color", "partition"]
                  },
                  "integer": {
                    "title": "Whether this number attribute contains integers.",
                    "type": "boolean"
                  },
                  "min": {
                    "title": "Minimum value.",
                    "type": "number"
                  },
                  "max": {
                    "title": "Maximum value.",
                    "type": "number"
                  },
                  "areaScaling": {
                    "title": "Size scale options.",
                    "type": "object",
                    "properties": {
                      "min": {
                        "title": "Scale minimum.",
                        "type": "number"
                      },
                      "max": {
                        "title": "Scale maximum.",
                        "type": "number"
                      },
                      "interpolation": {
                        "title": "Scale interpolation.",
                        "type": "string",
                        "enum": ["linear", "pow-2"]
                      }
                    }
                  },
                  "colorScale": {
                    "title": "Color scale.",
                    "type": "string",
                    "enum": ["interpolateCubehelixDefault", "interpolateYlOrBr"]
                  },
                  "modalities": {
                    "title": "The attribute's modalities in case of partition.",
                    "type": "object",
                    "additionalProperties": {}
                  }
                }
              }
            ]
          }
        }
      }
    }
  }
}
